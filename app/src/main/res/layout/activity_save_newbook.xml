<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Library.Save_newbook">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/Save_backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_backbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책 등록하기"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="읽고 있는 책으로 등록합니다."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/Save_image"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책 제목"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="36dp"/>
        <TextView
            android:id="@+id/Save_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_yellow"
            android:text="책 제목"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저자"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp"/>
        <TextView
            android:id="@+id/Save_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저자"
            android:background="@drawable/background_yellow"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출판사"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp"/>
        <TextView
            android:id="@+id/Save_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출판사"
            android:background="@drawable/background_yellow"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="6dp"/>



        <Button
            android:id="@+id/Save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:background="@drawable/background_yellow"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="270dp"/>
        <TextView
            android:clickable="true"
            android:id="@+id/Save_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="6dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>